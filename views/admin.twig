{% extends 'layout.twig' %}
{% block content %}
    <body>
    <h2>Пользователи</h2>
<table border="1">
    <tr>
        <th>id</th>
        <th>Name</th>
        <th>Number</th>
        <th>Email</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.number }}</td>
            <td>{{ user.email }}</td>
        </tr>
    {% endfor %}
</table>
    <h2>Заказы</h2>
    <table border="1">
        <tr>
            <th>Order_id</th>
            <th>User_id</th>
            <th>Adress</th>
            <th>Detail</th>
            <th>Comment</th>
        </tr>
        {% for order in orders %}
            <tr>
                <td>{{ order.id_order }}</td>
                <td>{{ order.user_id }}</td>
                <td>{{ order.adress_order }}</td>
                <td>{{ order.detail_order }}</td>
                <td>{{ order.comment_order }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}